<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.manage_activities.Manage_ActivitiesFragment">


    <androidx.appcompat.widget.SearchView
        android:id="@+id/vsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:iconifiedByDefault="false"
        android:focusable="true"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_activities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/vsearch"
        tools:listitem="@layout/item_manage_activities"

        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_AddInActivities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add_box" />

</RelativeLayout>