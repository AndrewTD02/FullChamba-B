<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.perfil.PerfilFragment">

    <RelativeLayout
        android:id="@+id/block_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center">

        <ImageView
            android:id="@+id/imagePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:src="@tools:sample/avatars" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/block_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/block_image"

        android:gravity="center">

        <TextView
            android:id="@+id/tlNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: " />

        <TextView
            android:id="@+id/txt_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tlNombre"
            android:text="TextView" />

        <TextView
            android:id="@+id/tlApellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tlNombre"
            android:text="Apellido: " />

        <TextView
            android:id="@+id/txt_apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tlNombre"
            android:layout_toRightOf="@id/tlApellido"
            android:text="TextView" />

        <TextView
            android:id="@+id/tlCargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tlApellido"
            android:text="Cargo: " />

        <TextView
            android:id="@+id/txt_cargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tlApellido"
            android:layout_toRightOf="@id/tlCargo"
            android:text="TextView" />

        <TextView
            android:id="@+id/tlCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tlCargo"
            android:text="Correo: " />

        <TextView
            android:id="@+id/txt_correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tlCargo"
            android:layout_toRightOf="@id/tlCargo"
            android:text="TextView" />

    </RelativeLayout>



</RelativeLayout>